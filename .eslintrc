{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "import",
    "meteor"
  ],
  "extends": [
    "airbnb",
    "plugin:meteor/recommended"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true,
    "meteor": true,
    "node": true
  },
  "rules": {
    "consistent-return": "off",
    "func-names": "off",
    "global-require": "off",
    "max-len": "off",
    "new-cap": "off",
    "no-cond-assign": [
      "error",
      "except-parens"
    ],
    "no-console": "off",
    "no-constant-condition": [
      "error",
      {
        "checkLoops": false
      }
    ],
    "no-new": "off",
    "no-param-reassign": "off",
    "no-underscore-dangle": "off",
    "prefer-arrow-callback": "off",
    "meteor/eventmap-params": [
      2,
      {
        "eventParamName": "event",
        "templateInstanceParamName": "instance"
      }
    ],
    "meteor/template-names": [
      0
    ]
  },
  "settings": {
    "import/core-modules": [
      "meteor"
    ],
    "import/resolver": "meteor"
  },
  "globals": {
    "bootbox": false,
    "FS": false,
    "gm": false,
    "Wunderlist": true,
    "Todoist": true
  }
}
